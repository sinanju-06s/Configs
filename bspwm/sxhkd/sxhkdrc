# make sxhkd reload its configuration files
super + Escape
	pkill -USR1 -x sxhkd
 
# quit or restart bspwm
#super + shift + {q,r}
#	bspc {quit,wm -r}
 
# create a new terminal window or swap the current one to the biggest one in the screen 
super + {_,shift + }Return
	{alacritty, bspc node -s biggest.local}
 
# close or kill a window
super + {_,shift + }q
	bspc node -{k,c}
 
# change the window state
super + {t,ctrl + t,l,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}
 
# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}
 
# focus or send a window to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# run rofi to open shit, drun looks for relations betwen search 
# run looks for the exact word;
super + {_,shift +} d
	rofi -show {drun,run}

#Open Obsidian
super + o
	obsidian

#Open firefox
super + g
	firefox
